<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue_green_dark</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <!-- Base application text theme. -->
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Main page Button theme. -->
    <style name="main_page_buttons">
        <item name="android:textColor">@color/sky_blue</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">168dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Main page TextView theme. -->
    <style name="main_page_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">52sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Dialog message theme. -->
    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Title Theme -->
        <item name="android:textColor">@color/blue_green_dark</item>
        <!-- Button Theme -->
        <item name="colorAccent">@color/blue_green_light</item>
        <!-- Message Theme -->
        <item name="colorPrimary">@color/blue_green_dark</item>
        <!-- Window theme -->
        <item name="android:windowBackground">@color/white</item>
    </style>

</resources>
